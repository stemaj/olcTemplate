{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cd solution && make -j8",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "cd solution && make config=test -j8 && ./bin/Test/OlcTemplate",
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./solution/bin/Debug/OlcTemplate",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "build on mac",
      "type": "shell",
      "command": "clang++ -v -std=c++17 -mmacosx-version-min=10.15 -Wall -Wno-everything -framework OpenGL -framework GLUT -framework Carbon -lpng -lfreetype -L/opt/homebrew/lib -I/opt/homebrew/include src/*.cpp -o ./bin/OlcTemplate && ./bin/OlcTemplate",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "Emscripten",
      "type": "shell",
      "command": "find",
      "args": [
        ".",
        "-name",
        "'*.cpp'",
        ">",
        "file_list.txt",
        "&&",
        "em++",
        "-std=c++2a",
        "-O2",
        "-s",
        "ALLOW_MEMORY_GROWTH=1",
        "-s",
        "MAX_WEBGL_VERSION=2",
        "-s",
        "MIN_WEBGL_VERSION=2",
        "-s",
        "USE_LIBPNG=1",
        "-s",
        "TOTAL_MEMORY=30mb",
        "-I./",
        "-Isdk/imgui-1.90.4",
        "-Isdk/imgui-1.90.4/backends",
        "-Isdk/sol2-3.3.0",
        "-Isdk/lua-5.4.2/include",
        "-Lsdk/lua-5.4.2/emscripten",
        "-llua54emscripten",
        "-ldl",
        "$(<file_list.txt)",
        "-o",
        "./index.html",
        "--shell-file",
        "shell_minimal.html",
        "--preload-file",
        "./assets",
        "--preload-file",
        "./scripts",
        "&&",
        "emrun",
        "./index.html"
      ],
      "problemMatcher": [],
    },
  ]
}